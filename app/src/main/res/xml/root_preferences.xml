<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/header_layout">

        <ListPreference
            app:defaultValue="5,5"
            app:entries="@array/grid_count_entries"
            app:entryValues="@array/grid_count_values"
            app:key="grid_count"
            app:title="@string/grid_count"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="display_top_bar"
            app:title="@string/display_top_bar" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/header_gesture">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="allow_scroll_page"
            app:summaryOff="@string/scroll_to_switch_page_off"
            app:summaryOn="@string/scroll_to_switch_page_on"
            app:title="@string/scroll_to_switch_page" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/header_system">

        <Preference
            app:key="set_default_app"
            app:title="@string/set_default_app" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/header_about">

        <Preference
            app:key="version"
            app:summary="@string/version_name"
            app:title="@string/version" />

    </PreferenceCategory>

</PreferenceScreen>